<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

    <!-- Auto Setup Service -->
    <addon id="service.cooler.autosetup"
           name="Cooler Auto Setup Service"
           version="1.0.0"
           provider-name="Debe">

        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.slyguy" version="1.0.0" />
            <import addon="inputstream.adaptive" version="2.0.0" />
            <import addon="inputstream.helper" version="0.5.0" />
        </requires>

        <extension point="xbmc.service" library="service.py">
            <provides>executable</provides>
        </extension>

        <extension point="xbmc.addon.metadata">
            <summary>One-time auto-setup for Cooler Build (runs once, then deletes)</summary>
            <description>Sets up AuraMOD skin, addons, widgets, EPG, and self-start into Live TV.</description>
            <platform>all</platform>
            <disclaimer>Requires internet for AuraMOD download.</disclaimer>
        </extension>

    </addon>

    <!-- Repository Addon Entry -->
    <addon id="repository.myrepo"
           name="My Cooler Repo"
           version="1.0.0"
           provider-name="Debe">

        <extension point="xbmc.addon.repository" name="My Cooler Repo">
            <dir>
                <info compressed="false">https://debe2025.github.io/cooler-repo/addons.xml</info>
                <checksum>https://debe2025.github.io/cooler-repo/addons.xml.md5</checksum>
                <datadir zip="true">https://debe2025.github.io/cooler-repo/zips/</datadir>
                <haslang>en</haslang>
            </dir>
        </extension>

        <extension point="xbmc.addon.metadata">
            <summary>Custom repo with DStv Now, Samsung TV Plus, and auto-setup</summary>
            <description>One-click setup for live TV channels, Netflix, and free content with auto-start to EPG.</description>
            <platform>all</platform>
            <assets>
                <icon>cooler-42549_640.png</icon>
            </assets>
            <news>v1.0.0 - Perfect auto-setup build</news>
        </extension>

    </addon>

</addons>
