<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.myrepo"
       name="My Cooler Repo"
       version="1.0.1"
       provider-name="Debe">

    <extension point="xbmc.addon.repository" name="My Cooler Repository">
        <info compressed="false">https://debe2025.github.io/cooler-repo/addons.xml</info>
        <checksum>https://debe2025.github.io/cooler-repo/addons.xml.md5</checksum>
        <datadir zip="true">https://debe2025.github.io/cooler-repo/</datadir>
        <!-- hashalgo can stay default (md5) or explicitly set -->
        <hashalgo>md5</hashalgo>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Samsung TV+, Pluto TV, DStv Now, Netflix &amp; Free Legal Addons</summary>
        <description lang="en_GB">
One clean repository with:
• Samsung TV Plus (200+ free channels)
• Pluto TV PVR
• DStv Now (official, paid login)
• Netflix (Widevine)
• Tubi, Crackle, Popcornflix, YouTube, Internet Archive and more
        </description>
        <disclaimer lang="en_GB">For legal use only with your own subscriptions where required.</disclaimer>
        <platform>all</platform>
        <assets>
            <icon>cooler-42549_640.png</icon>
            <fanart></fanart>
        </assets>
        <news>v1.0.1 - Updated for Kodi 21 Omega</news>
    </extension>
</addon>