<addon id="plugin.video.free-movies"
       name="Free Movies"
       version="1.0.0"
       provider-name="coolitis">
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Sample Free Movies Addon</summary>
        <description>Watch freely available movies (for testing).</description>
        <platform>all</platform>
    </extension>
</addon>
