<addon id="slyguy.samsung.tv.plus"
       name="Samsung TV"
       version="1.0.0"
       provider-name="Debe">

    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.slyguy" version="1.0.0" />
        <import addon="inputstream.adaptive" version="2.0.0" />
        <import addon="inputstream.helper" version="0.5.0" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Samsung TV streaming</summary>
        <platform>all</platform>
    </extension>
</addon>
