       version="1.0.0"
       provider-name="Debe">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>

    <extension point="xbmc.python.module" library="default.py" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Simple signalling between Kodi add-ons.</summary>
